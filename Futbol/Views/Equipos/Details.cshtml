@model Futbol.Equipo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="library-book-area mg-t-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="single-cards-item">
                    <div class="single-product-image">
                        <a href="#"><img src="@Url.Content("~/Content/img/login/Fondo.jpg")" alt=""></a>
                    </div>
                    <div class="single-product-text">
                        <img src="@Url.Content(Model.Imagen.imagen_path)" alt="">
                        <h4 class="cards-hd-dn">
                            @Html.DisplayFor(model => model.equipo_nombre)                        
                        </h4>
                        <h5>
                            @Html.DisplayFor(model => model.equipo_estado)
                        </h5>
                        <a class="follow-cards" href="@Url.Action("Edit", "Equipos", new { id = Model.equipo_id })">Editar</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="hpanel widget-int-shape responsive-mg-b-30 res-tablet-mg-t-30 dk-res-t-pro-30">
                    <div class="panel-body">
                        <div class="stats-title pull-left">
                            <h4>
                                @Html.DisplayNameFor(model => model.equipo_representante)
                            </h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="educate-icon educate-department"></i>
                        </div>
                        <div class="m-t-xl widget-cl-3">
                            <small>
                                @Html.DisplayFor(model => model.equipo_representante)
                            </small>
                        </div>
                    </div>
                </div>
                <br />
                <div class="hpanel widget-int-shape responsive-mg-b-30 res-tablet-mg-t-30 dk-res-t-pro-30">
                    <div class="panel-body">
                        <div class="stats-title pull-left">
                            <h4>
                                @Html.DisplayNameFor(model => model.equipo_celular)
                            </h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="educate-icon educate-department"></i>
                        </div>
                        <div class="m-t-xl widget-cl-3">
                            <small>
                                @Html.DisplayFor(model => model.equipo_celular)
                            </small>
                        </div>
                    </div>
                </div>
                <br />
                <div class="hpanel widget-int-shape responsive-mg-b-30 res-tablet-mg-t-30 dk-res-t-pro-30">
                    <div class="panel-body">
                        <div class="stats-title pull-left">
                            <h4>
                                @Html.DisplayNameFor(model => model.equipo_telefono)
                            </h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="educate-icon educate-department"></i>
                        </div>
                        <div class="m-t-xl widget-cl-3">
                            <small>
                                @Html.DisplayFor(model => model.equipo_telefono)
                            </small>
                        </div>
                    </div>
                </div>
                
                <br />
                <div class="row">
                    <div class="col-lg-offset-6 col-md-offset-6 col-sm-offset-6 col-xs-offset-6">
                        @Html.ActionLink("Volver", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>