@model Futbol.ModelViews.LlavesViewModel
@{
    ViewBag.Title = "ListaLlaves";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="widget-program-box mg-tb-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="hpanel widget-int-shape responsive-mg-b-30 card">
                    <div class="panel-body">
                        <a href="#" id="addLlave">
                            <div class="text-center content-box">
                                <div class="torneo-image">
                                    <img class="img-torneo" src="@Url.Content("../../Content/img/espe-images/plus2.svg")" alt="Alternate Text" />
                                </div>
                                <div class="torneo-text">
                                    <h5>Crear Llave</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            @foreach (var item in Model.FasesGrupos)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="hpanel widget-int-shape responsive-mg-b-30">
                        <div class="panel-body">
                            <div class="text-center content-box">
                                <h2 class="m-b-xs">@item.faseg_nombre</h2>
                                <p class="font-bold text-success">@item.faseg_estado</p>
                                <div class="m icon-box pad-top-bot">
                                    <i class="educate-icon educate-star-half"></i>
                                </div>
                                <p class="font-bold text-success">@item.faseg_fecha</p>

                                <a class="btn btn-primary" href="@Url.Action("Details", "FaseGrupos", new {id = item.faseg_id})">Configurar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @foreach (var item2 in Model.FasesEliminatorias)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="hpanel widget-int-shape res-tablet-mg-t-30 dk-res-t-pro-30">
                        <div class="panel-body">
                            <div class="text-center content-box">
                                <h2 class="m-b-xs">@item2.fasee_nombre</h2>
                                <p class="font-bold text-danger">@item2.fasee_estado</p>
                                <div class="m icon-box pad-top-bot">
                                    <i class="educate-icon educate-charts"></i>
                                </div>
                                <p class="font-bold text-success">
                                    @item2.fasee_fecha
                                </p>
                                <a class="btn btn-primary" href="@Url.Action("Details", "FaseEliminatorias", new {id = item2.fasee_id})">Configurar</a>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>
<div class="modal fade" id="LlaveModal">
    <div class="modal-dialog modal-lg" style=" width: 600px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h5>Selecciona el tipo de llave que deseas crear</h5>
            </div>
            @using (Html.BeginForm("Create", "Llaves", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.DropDownList("TipoLlave", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button id="save" type="submit" class="btn btn-primary">Empezar</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#addLlave").on("click", function() {
                $("#LlaveModal").modal();
            });
        });
    </script>
}
